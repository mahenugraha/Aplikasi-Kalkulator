<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputAngka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/app_name"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/inpHasil" />

    <Button
        android:id="@+id/btnKurang2"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/btnTambah"
        app:layout_constraintTop_toBottomOf="@+id/inputAngka2" />

    <EditText
        android:id="@+id/inputAngka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="@string/app_name"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/inputAngka1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:text="Angka1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpHasil" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="88dp"
        android:text="Angka2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnTambah"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="104dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnKali2"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:text="X"
        app:layout_constraintStart_toEndOf="@+id/btnKurang2"
        app:layout_constraintTop_toBottomOf="@+id/inputAngka2" />

    <Button
        android:id="@+id/btnBagi"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/btnKali2"
        app:layout_constraintTop_toBottomOf="@+id/inputAngka2" />

    <EditText
        android:id="@+id/inpHasil"
        android:layout_width="301dp"
        android:layout_height="65dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:background="#60988D8D"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="36dp"
        android:text="CLEAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKurang2" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="36dp"
        android:text="EXIT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClear" />

</androidx.constraintlayout.widget.ConstraintLayout>